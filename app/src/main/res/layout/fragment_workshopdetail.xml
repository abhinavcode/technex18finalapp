<?xml version="1.0" encoding="utf-8"?>
<com.github.ksoichiro.android.observablescrollview.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/material_view_pager_placeholder"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginBottom="@dimen/cardMarginVertical"
            android:layout_marginLeft="@dimen/cardMarginHorizontal"
            android:layout_marginRight="@dimen/cardMarginHorizontal"
            android:background="@android:color/white"
            app:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.iitbhu.technex18.utils.BoldModTextView
                    android:layout_width="match_parent"
                    android:background="@drawable/strokered"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:padding="2dp"

                    android:layout_margin="@dimen/cardMarginVertical"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Description"/>

                <com.iitbhu.technex18.utils.ModTextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:id="@+id/tv_workshop_desc"
                    android:layout_margin="@dimen/cardMarginVertical"
                    android:paddingLeft="8dp"
                    android:autoLink="phone"
                    android:textColorLink="@color/md_blue_700"
                    android:paddingRight="8dp"
                    android:textColor="@color/md_grey_900"
                    android:layout_height="wrap_content"
                    android:text="@string/paragraph"/>


            </LinearLayout>





        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginBottom="@dimen/cardMarginVertical"
            android:layout_marginLeft="@dimen/cardMarginHorizontal"
            android:layout_marginRight="@dimen/cardMarginHorizontal"
            android:background="@android:color/white"
            app:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.iitbhu.technex18.utils.BoldModTextView
                    android:layout_width="match_parent"
                    android:background="@drawable/strokegreen"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"

                    android:padding="2dp"
                    android:layout_margin="@dimen/cardMarginVertical"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Fees"/>

                <com.iitbhu.technex18.utils.ModTextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:id="@+id/tv_workshop_fees"
                    android:layout_marginTop="@dimen/cardMarginVertical"
                    android:layout_marginRight="@dimen/cardMarginVertical"
                    android:layout_marginLeft="@dimen/cardMarginVertical"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/md_grey_900"
                    android:layout_height="wrap_content"
                    android:text="@string/list"/>


            </LinearLayout>





        </android.support.v7.widget.CardView>
    </LinearLayout>

</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>