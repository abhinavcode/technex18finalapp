<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:custom="http://schemas.android.com/apk/res-auto"
android:layout_height="wrap_content"
android:layout_marginTop="4dp"
custom:cardElevation="3dp"
android:id="@+id/cv_events"
android:layout_margin="4dp"
android:layout_width="match_parent">

<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/bggradient"
        android:id="@+id/bg"
        android:scaleType="centerCrop"
        android:layout_height="240dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/gradientlayout"
        android:padding="4dp"
        android:layout_height="240dp"
        android:background="@drawable/gradientblue"
        android:orientation="vertical">

        <com.iitbhu.technex18.utils.BoldModTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"

            android:layout_margin="4dp"
            android:id="@+id/tv_events"
            android:textColor="@color/white"
            android:text="Robonex"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/robo_white"
            android:foregroundGravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/iv_events_icon"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:background="@drawable/strokewhite"
            android:layout_height="wrap_content">

            <com.iitbhu.technex18.utils.ModTextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tv_desc"
                android:textColor="@color/white"
                android:text="Dashing through the snow, in a one horse open sleigh, over the fields we go, laughing all the way!! Jingle Bells, Jingle Bells!!"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/rupee"/>

                    <com.iitbhu.technex18.utils.ModTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:id = "@+id/prize_text"
                        android:textColor="@color/white"
                        android:text="Prize : Rs 20000" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:id="@+id/viewSep"
                    android:background="@color/white"
                    android:layout_height="match_parent"/>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/memberView"
                    android:layout_height="20dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/account_outline"/>


                    <com.iitbhu.technex18.utils.ModTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id = "@+id/team_text"
                        android:gravity="left"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Members : 4 Max" />

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>





    </LinearLayout>



</FrameLayout>

</android.support.v7.widget.CardView>