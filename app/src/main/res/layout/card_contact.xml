<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    custom:cardBackgroundColor="@color/transparent_white_percent_90"
    android:id="@+id/cv_events"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:id="@+id/logo_image1"
            android:src="@drawable/user_m_black"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.iitbhu.technex18.utils.BoldModTextView
                android:layout_width="match_parent"
                android:text="Sir Phoenix de Tauroville"
                android:id="@+id/name_text"
                android:textColor="@color/md_teal_900"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="wrap_content" />

            <com.iitbhu.technex18.utils.ModTextView
                android:layout_width="match_parent"
                android:text="Coordinator"
                android:id="@+id/position_text"
                android:textColor="@color/md_blue_600"
                android:textSize="14sp"
                android:gravity="left"
                android:layout_height="wrap_content" />

            <com.iitbhu.technex18.utils.ModTextView
                android:layout_width="match_parent"
                android:text="+91 8090842924"
                android:id="@+id/contact_text"
                android:textColor="@color/md_grey_700"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="wrap_content" />

            <com.iitbhu.technex18.utils.ModTextView
                android:layout_width="match_parent"
                android:text="soumyadeep.das.phy14@iitbhu.ac.in"
                android:id="@+id/email_text"
                android:textColor="@color/md_grey_700"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>