<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    custom:cardBackgroundColor="#00000000"
    android:id="@+id/cv_events"
    android:layout_width="match_parent">

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/navig_frame">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iv_image"
            android:src="@drawable/bannerascension"
            android:scaleType="centerInside"
            />
        <com.iitbhu.technex18.utils.BoldModTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/tv_image"
            android:background="@color/transparent_black_percent_30"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:text="Image"/>


    </FrameLayout>

</android.support.v7.widget.CardView>