        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginBottom="@dimen/cardMarginVertical"
            android:layout_marginLeft="@dimen/cardMarginHorizontal"
            android:layout_marginRight="@dimen/cardMarginHorizontal"
            android:background="@android:color/white"
            app:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.iitbhu.technex18.utils.BoldModTextView
                    android:layout_width="match_parent"
                    android:background="@drawable/strokered"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:padding="2dp"

                    android:layout_margin="@dimen/cardMarginVertical"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Introduction"/>

                <com.iitbhu.technex18.utils.ModTextView
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:autoLink="web|phone|email"
                    android:textColorLink="@color/md_blue_700"

                    android:id="@+id/tv_hospitality_intro"
                    android:layout_margin="@dimen/cardMarginVertical"
                    android:textColor="@color/md_grey_900"
                    android:layout_height="wrap_content"
                    android:text="Technex put its best efforts to make the visit to IIT(BHU) Varanasi, most comfortable and memorable, through its hospitality team which caters to the needs of participants as soon as they arrive the campus."/>


