<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="160dp"
    custom:cardBackgroundColor="#00000000"
    android:id="@+id/cv_events"
    android:layout_margin="4dp"
    android:layout_width="match_parent">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/navig_frame"
            android:background="@color/md_red_trans">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />
            <ImageView
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_height="50dp"
                android:id="@+id/navig_img"
                android:src="@drawable/robo_white"
                android:scaleType="fitCenter"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom|start"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <com.iitbhu.technex18.utils.BoldModTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:id="@+id/title_navig"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="Title"/>

            <com.iitbhu.technex18.utils.ModTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:id="@+id/subtitle_navig"
                android:layout_gravity="bottom|end"
                android:textColor="@color/white"
                android:text="Subtitle"/>


        </LinearLayout>





</FrameLayout>

</android.support.v7.widget.CardView>