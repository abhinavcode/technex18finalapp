<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="240dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    custom:cardBackgroundColor="#00000000"
    android:id="@+id/cv_events"
    android:layout_width="match_parent">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/navig_frame"
            >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:id="@+id/banner_events"
            android:src="@drawable/bannerascension"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/gradientlayout"
            android:background="@drawable/gradientblue"
            android:layout_height="240dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp" />
                <ImageView
                    android:layout_width="50dp"
                    android:padding="5dp"
                    android:layout_height="50dp"
                    android:id="@+id/icon_events"
                    android:src="@drawable/robo_white"
                    android:scaleType="fitCenter"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"

                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <com.iitbhu.technex18.utils.BoldModTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/title_events"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:text="Title"/>

                <com.iitbhu.technex18.utils.ModTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/subtitle_events"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:text="Subtitle"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="45dp"
                android:layout_gravity="center_horizontal|bottom"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.iitbhu.technex18.utils.ModTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/e1"
                    android:background="@drawable/strokewhite"
                    android:textSize="14sp"
                    android:padding="2dp"
                    android:layout_margin="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="Event 1"/>

                <com.iitbhu.technex18.utils.ModTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"

                    android:padding="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_margin="10dp"
                    android:background="@drawable/strokewhite"
                    android:id="@+id/e2"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:text="Event 2"/>

                <com.iitbhu.technex18.utils.ModTextView
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@drawable/strokewhite"
                    android:id="@+id/e3"

                    android:padding="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:text="Event 3"/>


            </LinearLayout>


        </LinearLayout>







</FrameLayout>

</android.support.v7.widget.CardView>